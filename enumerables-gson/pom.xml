<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>nl.talsmasoftware.enumerables</groupId>
        <artifactId>enumerables-root</artifactId>
        <version>0.1.2-SNAPSHOT</version>
    </parent>

    <artifactId>enumerables-gson</artifactId>
    <name>Enumerables (gson)</name>
    <packaging>jar</packaging>

    <properties>
        <root.basedir>${project.parent.basedir}</root.basedir>
        <gson.version>2.8.1</gson.version>
        <reflection.version>0.1.4</reflection.version>
        <maven-shade-plugin.version>2.4.3</maven-shade-plugin.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>enumerables</artifactId>
        </dependency>
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
        </dependency>
        <dependency>
            <groupId>nl.talsmasoftware</groupId>
            <artifactId>reflection</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>${maven-shade-plugin.version}</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <minimizeJar>true</minimizeJar>
                            <createSourcesJar>true</createSourcesJar>
                            <filters>
                                <filter>
                                    <artifact>nl.talsmasoftware:reflection</artifact>
                                    <includes>
                                        <include>nl/talsmasoftware/reflection/**</include>
                                    </includes>
                                </filter>
                            </filters>
                            <relocations>
                                <relocation>
                                    <pattern>nl.talsmasoftware.reflection</pattern>
                                    <shadedPattern>nl.talsmasoftware.enumerables.support.reflection</shadedPattern>
                                </relocation>
                            </relocations>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.google.code.gson</groupId>
                <artifactId>gson</artifactId>
                <version>${gson.version}</version>
            </dependency>

            <dependency>
                <groupId>nl.talsmasoftware</groupId>
                <artifactId>reflection</artifactId>
                <version>${reflection.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>
